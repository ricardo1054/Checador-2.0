<div class="container">
  <h1>Nuevo Turno</h1>
  
  <%= form_with(model: @turno, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :empleado %>
      <%= form.text_field :empleado, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= form.label :fecha %>
      <%= form.date_field :fecha, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= form.label :hora_entrada %>
      <%= form.time_field :hora_entrada, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= form.label :hora_salida %>
      <%= form.time_field :hora_salida, class: "form-control" %>
    </div>
    
    <%= form.submit "Crear Turno", class: "btn btn-primary" %>
  <% end %>
  
  <%= link_to "Volver", turnos_path, class: "btn btn-secondary mt-3" %>
</div>